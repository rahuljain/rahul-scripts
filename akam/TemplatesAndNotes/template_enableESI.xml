<!-- Enable ESI processing and turn on dynamic content assembly for specific content. -->
<match:uri.ext value="html">
  <edgecomputing:processor>
    <allow-esi>on</allow-esi>
    <value>esi</value>
    <status>on</status>
  </edgecomputing:processor>
  <edgeservices:edgescape.status>off</edgeservices:edgescape.status>
</match:uri.ext>



<!-- Enable ESI through response headers.
Once this feature is enabled, you can nominate a file for ESI processing in a response header using the Edge-control header dca. -->
<match:uri.wildcard value="/*">
  <edgecomputing:processor>
    <allow-dca-response-headers>on</allow-dca-response-headers>
    <allow-esi>on</allow-esi>
    <status>on</status>
  </edgecomputing:processor>
  <edgeservices:edgescape.status>off</edgeservices:edgescape.status>
</match:uri.wildcard>
